#!/usr/bin/env python

import sys
import argparse
import decimal

parser = argparse.ArgumentParser()
parser.add_argument('--start', help='start at line START', type=int, default=0)
parser.add_argument('--end', help='end at line END', type=int, default=decimal.Decimal('Infinity'))
parser.add_argument('--length', help='end at line START+LEN', type=int, default=decimal.Decimal('Infinity'))
parser.add_argument('--verbose', help='be verbose', action='store_true')
parser.add_argument('--first_line', help='first line has #NUMBER', type=int, default=0)

args = parser.parse_args()

if args.verbose:
  print args

line_num = args.first_line

for line in sys.stdin:
    if line_num >= args.start and line_num < args.start + args.length and line_num < args.end:
        print line,
    if line_num > args.start + args.length:
        break
    if line_num > args.end:
        break
    line_num += 1
